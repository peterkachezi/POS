    }
</style>


<script>

    $(document).ready(function () {
        GetAllData();
    });

    function GetAllData() {


        var t = $('#tblRecords').DataTable({
            "ajax": {
                "url": "/CyberSection/Expenses/GetExpenses",
                "type": "GET",
                "datatype": "json"
            },

            "columns": [

                { "data": "id" },
                { "data": "expenseTypeName" },
                { "data": "paymentTypeName" },
                { "data": "amount" },
                { "data": "description" },
                { "data": "createdByName" },
                { "data": "newExpenseDate" },


                {
                    data: null,
                    mRender: function (data, type, row) {
                        return "<a href='#' class='btn-sm success'    onclick=GetExpenses('" + row.id + "'); >Edit</a> / <a href='#' class='btn-sm danger'    onclick=DeleteRecord('" + row.id + "'); >Delete</a>";

                    }
                }

            ]

        });
        t.on('order.dt search.dt', function () {
            t.column(0, { search: 'applied', order: 'applied' }).nodes().each(function (cell, i) {
                cell.innerHTML = i + 1;
            });
        }).draw();
    }

    $('#btnSubmit').click(function (evt) {

        if ($('#txtAmount').val() == '') {
            $('#txtAmount').focus();
            swal({
                position: 'top-end',
                type: "error",
                title: "Amount is a required field",
                showConfirmButton: true,
            });

            return false;
        }


        if ($('#txtExpenseDate').val() == '') {
            $('#txtExpenseDate').focus();
            swal({
                position: 'top-end',
                type: "error",
                title: "Expense date is a required field",
                showConfirmButton: true,
            });

            return false;
        }




        $("#ModalCreateBrand").modal('hide');

        $("#divLoader").show();

        // Stop the button from submitting the form:
        evt.preventDefault();

        // Serialize the entire form:
        var formData = new FormData($('#frmCreateExpense').get(0));


        $.ajax({
            url: "/CyberSection/Expenses/Create/",
            type: "POST",
            data: formData,
            processData: false,
            contentType: false,


            success: function (response) {

                if (response.success) {

                    swal({
                        position: 'top-end',
                        type: "success",
                        title: response.responseText,
                        showConfirmButton: false,


                    }), setTimeout(function () { location.reload(); }, 3000);

                } else {

                    swal({
                        position: 'top-end',
                        type: "error",
                        title: response.responseText,
                        showConfirmButton: true,
                        timer: 5000,
                    });

                    HideLoader();
                }
            },

            error: function (response) {
                alert("error!");
            },
            complete: function () {
                HideLoader();
            }


        });

    });

    $("#btnSubmitEdit").click(function () {

        if ($('#txtName1').val() == '') {
            $('#txtName1').focus();
            swal({
                position: 'top-end',
                type: "error",
                title: "Name is a required field",
                showConfirmButton: true,
            });

            return false;
        }

        $("#ModalUpdateExpense").modal('hide');

        var data = $("#frmUpdateExpense").serialize();

        $.ajax({

            type: "POST",
            url: "/CyberSection/Expenses/Update",
            data: data,

            success: function (response) {
                if (response.success) {

                    swal({
                        position: 'top-end',
                        type: "success",
                        title: response.responseText,
                        showConfirmButton: false,

                    }), setTimeout(function () { location.reload(); }, 3000);

                } else {

                    swal({
                        position: 'top-end',
                        type: "error",
                        title: response.responseText,
                        showConfirmButton: true,
                        timer: 5000,
                    });

                }
            },

            error: function (response) {
                alert("error!");

            }
        })

    })

    function DeleteRecord(e) {

        var id = e;

        console.log(id);


        swal(

            {
                title: "Are you sure?",

                text: "Once deleted, you will not be able to recover this  file!",

                type: "success",

                showCancelButton: true,

                confirmButtonColor: "##62b76e",

                confirmButtonText: "Yes, Procceed!",

                closeOnConfirm: false
            },

            function () {

                $.ajax({

                    type: "GET",

                    url: "/CyberSection/Expenses/Delete/" + id,

                    success: function (response) {

                        if (response.success) {

                            swal({

                                position: 'top-end',

                                type: "success",

                                title: response.responseText,

                                showConfirmButton: false,

                                // timer: 2000,

                            });
                            setTimeout(function () { location.reload(); }, 3000);

                        }

                        else {
                            swal({
                                position: 'top-end',
                                type: "error",
                                title: response.responseText,
                                showConfirmButton: true,
                                timer: 5000,
                            });

                        }

                    },
                    error: function (response) {
                        swal({
                            position: 'top-end',
                            type: "error",
                            title: "Server error ,kindly contact the admin for assistance",
                            showConfirmButton: false,
                            timer: 5000,
                        });

                    }

                })

            }
        );
    }

    function GetExpenses(e) {
        var id = e;
        console.log(id);

        $.get("/CyberSection/Expenses/GetById/?Id=" + id, function (data, status) {
            console.log(data);
            if (data == null) {
                alert("Does not exist");
            } else {

                $("#txtId").val(data.data.id);
                $("#txtAmount1").val(data.data.amount);
                $("#txtDescription1").val(data.data.description);
                $("#txtExpenseDate1").val(data.data.newExpenseDate);
                $("#txtExpenseTypeId1").val(data.data.expenseTypeId);


                $('#ModalUpdateExpense').modal({ backdrop: 'static', keyboard: false })
                $("#ModalUpdateExpense").modal('show');
            }

        });
    };

    //Allow users to enter numbers only
    $(".numericOnly").bind('keypress', function (e) {
        if (e.keyCode == '9' || e.keyCode == '16') {
            return;
        }
        var code;
        if (e.keyCode) code = e.keyCode;
        else if (e.which) code = e.which;
        if (e.which == 46)
            return false;
        if (code == 8 || code == 46)
            return true;
        if (code < 48 || code > 57)
            return false;
    });

    //Disable paste
    $(".numericOnly").bind("paste", function (e) {
        e.preventDefault();
    });

    $(".numericOnly").bind('mouseenter', function (e) {
        var val = $(this).val();
        if (val != '0') {
            val = val.replace(/[^0-9]+/g, "")
            $(this).val(val);
        }
    });





</script>