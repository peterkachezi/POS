@model IEnumerable<POS.Data.DTOs.StockModule.StockDTO>
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div class="col-md-12 col-sm-12 ">
    <div class="x_panel">
        <div class="x_title">

            <div class="row">

                <div class="col-md-3">

                    <h6 class="Header"><i class="fa fa-shopping-basket"></i> Products</h6>
                </div>
                <div class="col-md-9">
                    <button type="button" class="btn btn-success btn-sm  pull-right" data-toggle="modal" data-target="#ModalCreateProduct"><i class="fa fa-plus-circle"></i> </button>

                </div>

            </div>

            <div class="clearfix"></div>
        </div>
        <div class="x_content">
            <div class="row">
                <div class="col-sm-12">
                    <div class="card-box table-responsive">

                        <table id="datatable-responsive" class="table table-striped table-bordered dt-responsive nowrap table-sm" cellspacing="0" width="100%">

                            <thead>
                                <tr>
                                    <th>No</th>
                                
                                    <th>Product Code</th>
                                    <th>Cost Price</th>
                                    <th>Selling Price</th>
                                    <th>Expected Profit</th>
                            

                                    <th>Create Date</th>
                                    <th>Action</th>
                                </tr>
                            </thead>

                            <tbody>

                                @if (Model != null && Model.Count() > 0)
                                {
                                    int count = 1;
                                    foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@count</td>
                         
                                            <td>@item.ProductCode</td>
                                            <td>@item.CostPrice</td>
                                            <td>@item.SellingPrice</td>
                                            <td>@item.ExpectedProfit</td>
                                 


                                            <td>@item.CreateDate.ToShortDateString()</td>
                                            <td>
                                                <div class="dropdown">
                                                    <button class="btn btn-success dropdown-toggle  btn-sm" style="height: 1.5rem;" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                                        Active
                                                    </button>
                                                    <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                                        <a class="dropdown-item" href="#" onclick="GetProduct('@item.Id')" value="@item.Id">Edit Information</a>
                                                        <a class="dropdown-item" href="#" onclick="DeleteRecord('@item.Id')" value="@item.Id">Delete</a>
                                                    </div>
                                                </div>
                                            </td>
                                        </tr>
                                        count++;
                                    }
                                }

                            </tbody>

                        </table>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



<style>

    .success {
        background: #26B99A;
        color: #fff;
    }

    .danger {
        color: #fff;
        background-color: #dc3545;
        border-color: #dc3545;
    }

    .Header {
        font-weight: 600;
        color: #45ca9f;
        font-size: 1.1rem;
        max-width: calc(100% - 40px);
    }


    .loader {
        position: fixed;
        width: 256px;
        height: 256px;
        top: 50%;
        left: 50%;
        margin: -128px 0 0 -128px;
        z-index: 1000;
    }

    .Title {
        font-weight: 600;
        color: #45ca9f;
        font-size: 1.5rem;
        line-height: 70px;
        max-width: calc(100% - 40px);
    }
</style>

<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<link href="~/sweetalart/sweetalert.min.css" rel="stylesheet" />
<script src="~/sweetalart/sweetalert.min.js"></script>

<script>
    $(document).ready(function () {
        $('#dataTable').DataTable();

    });


    $('#btnSubmit').click(function (evt) {

        if (!$('#txtProductNameId').val()) {

            $('#txtProductNameId').focus();
            swal({
                position: 'top-end',
                type: "error",
                title: "Product Name is a required field",
                showConfirmButton: true,
            });
            return false;
        }

        if (!$('#txtCostPrice').val()) {

            $('#txtCostPrice').focus();
            swal({
                position: 'top-end',
                type: "error",
                title: "Cost Price is a required field",
                showConfirmButton: true,
            });
            return false;
        }

        if (!$('#txtSellingPrice').val()) {

            $('#txtSellingPrice').focus();
            swal({
                position: 'top-end',
                type: "error",
                title: "Selling Price is a required field",
                showConfirmButton: true,
            });
            return false;
        }

        if (!$('#txtSupplierId').val()) {

            $('#txtSupplierId').focus();
            swal({
                position: 'top-end',
                type: "error",
                title: "Supplier is a required field",
                showConfirmButton: true,
            });
            return false;
        }

        if (!$('#txtBrandId').val()) {

            $('#txtBrandId').focus();
            swal({
                position: 'top-end',
                type: "error",
                title: "Brand is a required field",
                showConfirmButton: true,
            });
            return false;
        }

        if (!$('#txtUOMId').val()) {

            $('#txtUOMId').focus();
            swal({
                position: 'top-end',
                type: "error",
                title: "Unit of Measure is a required field",
                showConfirmButton: true,
            });
            return false;
        }




        $("#ModalCreateProduct").modal('hide');

        $("#divLoader").show();
        // Stop the button from submitting the form:
        evt.preventDefault();

        // Serialize the entire form:


        var formData = new FormData($('#frmCreateProduct').get(0));


        $.ajax({
            url: "/Admin/Products/Create/",
            type: "POST",
            data: formData,
            processData: false,
            contentType: false,

            success: function (response) {
                if (response.success) {

                    swal({
                        position: 'top-end',
                        type: "success",
                        title: response.responseText,
                        showConfirmButton: false,
                    }), setTimeout(function () { location.reload(); }, 3000);

                } else {

                    swal({
                        position: 'top-end',
                        type: "error",
                        title: response.responseText,
                        showConfirmButton: true,
                        timer: 5000,
                    });

                    $("#divLoader").hide();
                }
            },

            error: function (response) {
                alert("error!");
            },
            complete: function () {
                HideLoader();
            }


        });

    });

    function DeleteRecord(e) {

        var id = e;

        console.log(id);


        swal(

            {
                title: "Are you sure?",

                text: "Once deleted, you will not be able to recover this  file!",

                type: "success",

                showCancelButton: true,

                confirmButtonColor: "##62b76e",

                confirmButtonText: "Yes, Procceed!",

                closeOnConfirm: false
            },

            function () {

                $.ajax({

                    type: "GET",

                    url: "/Admin/Products/Delete/" + id,

                    success: function (response) {

                        if (response.success) {

                            swal({

                                position: 'top-end',

                                type: "success",

                                title: response.responseText,

                                showConfirmButton: false,

                                // timer: 2000,

                            });
                            setTimeout(function () { location.reload(); }, 3000);

                        }

                        else {
                            swal({
                                position: 'top-end',
                                type: "error",
                                title: response.responseText,
                                showConfirmButton: true,
                                timer: 5000,
                            });

                        }

                    },
                    error: function (response) {
                        swal({
                            position: 'top-end',
                            type: "error",
                            title: "Server error ,kindly contact the admin for assistance",
                            showConfirmButton: false,
                            timer: 5000,
                        });

                    }

                })

            }
        );
    }

    function GetProduct(e) {
        var id = e;
        console.log(id);

        $.get("/Admin/Products/GetById/?Id=" + id, function (data, status) {

            console.log(data);

            if (data == null) {
                alert("Does not exist");
            } else {

                $("#txtId1").val(data.data.id);
                $("#txtName1").val(data.data.name);




                $('#ModalUpdateProduct').modal({ backdrop: 'static', keyboard: false })
                $("#ModalUpdateProduct").modal('show');
            }

        });
    };

    //Allow users to enter numbers only
    $(".numericOnly").bind('keypress', function (e) {
        if (e.keyCode == '9' || e.keyCode == '16') {
            return;
        }
        var code;
        if (e.keyCode) code = e.keyCode;
        else if (e.which) code = e.which;
        if (e.which == 46)
            return false;
        if (code == 8 || code == 46)
            return true;
        if (code < 48 || code > 57)
            return false;
    });

    //Disable paste
    $(".numericOnly").bind("paste", function (e) {
        e.preventDefault();
    });

    $(".numericOnly").bind('mouseenter', function (e) {
        var val = $(this).val();
        if (val != '0') {
            val = val.replace(/[^0-9]+/g, "")
            $(this).val(val);
        }
    });
</script>

