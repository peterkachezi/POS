                    error: function (response) {
                        swal({
                            position: 'top-end',
                            type: "error",
                            title: "Server error ,kindly contact the admin for assistance",
                            showConfirmButton: false,
                            timer: 5000,
                        });
                        $("#divLoader").hide();
                    }

                })

            }
        );
    }


    function GetRecord(e) {
        var id = e;
        console.log(id);

        $.get("/Admin/Suppliers/GetById/?Id=" + id, function (data, status) {
            console.log(data);
            if (data == null) {
                alert("Does not exist");
            } else {

                $("#txtId").val(data.data.id);
                $("#txtFirstName1").val(data.data.firstName);
                $("#txtMiddleName1").val(data.data.middleName);
                $("#txtLastName1").val(data.data.lastName);
                $("#txtEmail1").val(data.data.email);
                $("#txtPhoneNumber1").val(data.data.phoneNumber);
                $("#txtTown1").val(data.data.town);


                $('#ModalUpdateSupplier').modal({ backdrop: 'static', keyboard: false })
                $("#ModalUpdateSupplier").modal('show');
            }

        });
    };
    

    //Allow users to enter numbers only
    $(".numericOnly").bind('keypress', function (e) {
        if (e.keyCode == '9' || e.keyCode == '16') {
            return;
        }
        var code;
        if (e.keyCode) code = e.keyCode;
        else if (e.which) code = e.which;
        if (e.which == 46)
            return false;
        if (code == 8 || code == 46)
            return true;
        if (code < 48 || code > 57)
            return false;
    });

    //Disable paste
    $(".numericOnly").bind("paste", function (e) {
        e.preventDefault();
    });

    $(".numericOnly").bind('mouseenter', function (e) {
        var val = $(this).val();
        if (val != '0') {
            val = val.replace(/[^0-9]+/g, "")
            $(this).val(val);
        }
    });



